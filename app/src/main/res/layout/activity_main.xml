<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/gstPercentage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:hint="GST(in %)"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customersContactNumber"
        app:layout_constraintTop_toBottomOf="@+id/customersAddress" />

    <EditText
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:hint="Rate(per Kg)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quantity"
        app:layout_constraintTop_toBottomOf="@+id/gstPercentage" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="61dp"
        android:ems="10"
        android:hint="Quantity(in Kg)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/material" />

    <EditText
        android:id="@+id/material"
        android:layout_width="378dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Material"
        android:inputType="textPersonName"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customersContactNumber" />

    <EditText
        android:id="@+id/hsnCode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="HSN Code"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/customersAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numberOfBags"
        app:layout_constraintTop_toBottomOf="@+id/vehicleNumber" />

    <EditText
        android:id="@+id/customersContactNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Customer's Mob"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/material"
        app:layout_constraintEnd_toStartOf="@+id/gstPercentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customersPanNumber" />

    <EditText
        android:id="@+id/customersPanNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Customer’s PAN No"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/customersContactNumber"
        app:layout_constraintEnd_toStartOf="@+id/gstPercentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customersGstNumber" />

    <EditText
        android:id="@+id/customersAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="129dp"
        android:ems="10"
        android:hint="Customer's Name and Address"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/gstPercentage"
        app:layout_constraintEnd_toEndOf="@+id/vehicleNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsnCode" />

    <EditText
        android:id="@+id/numberOfBags"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Number of Bags"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/customersAddress"
        app:layout_constraintEnd_toStartOf="@+id/hsnCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lrNumber" />

    <EditText
        android:id="@+id/customersGstNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Customer’s GST No"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/customersPanNumber"
        app:layout_constraintEnd_toEndOf="@+id/gstPercentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customersAddress" />

    <EditText
        android:id="@+id/vehicleNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Vehicle Number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/hsnCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lrNumber"
        app:layout_constraintTop_toBottomOf="@+id/transport" />

    <EditText
        android:id="@+id/lrNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="L.R. Number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/numberOfBags"
        app:layout_constraintEnd_toStartOf="@+id/vehicleNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challanNumber" />

    <EditText
        android:id="@+id/transport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Transport"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/vehicleNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/challanNumber"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <EditText
        android:id="@+id/challanNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Challan Number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lrNumber"
        app:layout_constraintEnd_toStartOf="@+id/transport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoiceNumber" />

    <EditText
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/transport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invoiceNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/genPdfButton"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginBottom="48dp"
        android:text="Generate PDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/invoiceNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Invoice Number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/challanNumber"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:layout_height="29dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="16dp"
        android:text="Made with ❤ For PGS Enterprises by Sainath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantity" />

    <Switch
        android:id="@+id/stateSwitch"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:layout_marginStart="229dp"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="294dp"
        android:text="Out of State"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/gstPercentage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/customersPanNumber"
        app:layout_constraintTop_toTopOf="@+id/customersGstNumber"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>